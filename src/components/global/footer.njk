{% from "social-list.njk" import socialList %}

<footer class="footer layout">
  <div class="footer__container">
    <div class="footer__logo">
      <a class="footer__brand" href="/">
        {% include 'svg/logo.njk' %}
        <span class="screenreader">Mainmatter</span>
      </a>
    </div>
    <nav class="footer__nav" aria-label="Footer">
      {% for menu in footerNavigation.menus %}
        <div class="footer__menu footer-menu">
          <h2 class="footer-menu__heading text--accent">
            {% if menu.link %}<a class="footer-menu__heading-link" href="{{ menu.url }}">{% endif %}
            {{ menu.heading }}
            {% if menu.link %}</a>{% endif %}
          </h2>
          <ul class="footer-menu__list">
            {% for item in menu.links %}
              <li class="footer-menu__item">
                <a class="footer-menu__link" href="{{ item.link }}">
                  {{ item.text }}
                  <span class="footer-menu__arrow">{% include 'svg/arrow.njk' %}</span>
                </a>
              </li>
            {% endfor %}
          </ul>
        </div>
      {% endfor %}
    </nav>
    <div class="footer__secondary">
      <span class="footer__copyright">Â© 2014 - {% copyrightYear %} simplabs GmbH</span>
      <a class="footer__inline-link" href="/imprint/">Imprint</a>
      <a class="footer__inline-link" href="/privacy/">Privacy Policy</a>
    </div>
    {{ socialList(socials.socials, 'footer__socials')}}
  </div>
</footer>
