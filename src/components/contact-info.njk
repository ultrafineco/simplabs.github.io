{% from "social-list.njk" import socialList %}

<section class="contact-info layout">
  <div class="contact-info__container layout__full">
    <div class="contact-info__main">
      <h1 class="contact-info__heading h1">Contact Us</h1>
      <p class="contact-info__text">
        Let's talk about the challenges you're facing. Our experts are ready to guide you through your next big move. Contact us now to get the ball rolling.
      </p>
    </div>
    <div class="contact-info__methods contact-methods">
      {% for method in contact.contactMethods %}
        <h2 class="contact-methods__heading text--accent">
          {{ method.heading }}
        </h2>
        {% if method.link %}
          <a href="{{ method.link }}" class="contact-methods__text">{{ method.text | safe }}</a>
        {% else %}
          <p class="contact-methods__text">{{ method.text | safe  }}</p>
        {% endif %}
      {% endfor %}

      <h2 class="contact-methods__heading text--accent">Follow Us</h2>
      {{ socialList(socials.socials, 'contact-info__socials')}}
    </div>
  </div>
</section>
